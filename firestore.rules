rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow reading all documents
    match /{document=**} {
      allow read: if true;
      allow write: if true; // Development stage allows all writes, production environment needs stricter rules
    }
    
    // Token analysis collection
    match /token_analyses/{document} {
      allow read, write: if true;
    }
    
    // Generated contracts collection
    match /generated_contracts/{document} {
      allow read, write: if true;
    }
    
    // NFT metadata collection
    match /generated_nfts/{document} {
      allow read, write: if true;
    }
    
    // Investment advice collection
    match /investment_advice/{document} {
      allow read, write: if true;
    }
    
    // Chat history collection
    match /chat_history/{document} {
      allow read, write: if true;
    }
  }
}
